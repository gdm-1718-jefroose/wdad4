@model DayCare.Models.ViewModels.GroupViewModel
@{
    ViewBag.Title = "Group Management";
    ViewBag.SubTitle = "Manage all the organisations on your SAAS platform";
    ViewBag.Description = "Create an organisation via the form or go back to the list of organisations.";
    Layout = "~/Areas/Backoffice/Views/Shared/_Layout.cshtml";
}
<div class="mdl-cell mdl-cell--3-col mdl-cell--12-col-tablet mdl-cell--12-col-phone mdl-color--grey-100">
    @Html.Partial("_QuickActionsPartial")
</div>
<div class="mdl-cell mdl-cell--9-col mdl-cell--12-col-tablet mdl-cell--12-col-phone no-p-l">
    <div class="ahs-card-holder ahs-card-holder--first">
        <div class="mdl-card mdl-shadow--1dp ahs-card">
          <div class="mdl-card__title">
            <h2 class="mdl-card__title-text">Edit an exisiting group</h2>
          </div>
          <div class="form-holder">
            <form asp-controller="Group" asp-action="Edit" method="post" asp-antiforgery="true">
                <input asp-for="Group.Id" type="hidden">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ahs-textfield--block">
                    <input class="mdl-textfield__input" asp-for="Group.Name">
                    <label class="mdl-textfield__label" asp-for="Group.Name">Name</label>
                    <span class="mdl-textfield__error" asp-for="Group.Name" ></span>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ahs-textfield--block">
                    <input class="mdl-textfield__input" asp-for="Group.Description">
                    <label class="mdl-textfield__label" asp-for="Group.Description">Description</label>
                    <span class="mdl-textfield__error" asp-for="Group.Description"></span>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ahs-textfield--block">
                    <label class="mdl-textfield__label" asp-for="Group.Location">Location</label>
                    <select asp-for="Group.LocationId" asp-items="Model.Locations"></select> 
                    <span class="mdl-textfield__error" asp-for="Group.Location"></span>
                </div>
                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">Update</button>
            </form>
          </div>
        </div>
    </div>
</div>