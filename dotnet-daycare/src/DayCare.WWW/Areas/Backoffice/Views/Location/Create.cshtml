@model DayCare.Models.ViewModels.LocationViewModel
@{
    ViewBag.Title = "Location Management";
    ViewBag.SubTitle = "Manage all the locations on your SAAS platform";
    ViewBag.Description = "Create a location via the form or go back to the list of locations.";
    Layout = "~/Areas/Backoffice/Views/Shared/_Layout.cshtml";
}
<div class="mdl-cell mdl-cell--3-col mdl-cell--12-col-tablet mdl-cell--12-col-phone mdl-color--grey-100">
    @Html.Partial("_QuickActionsPartial")
</div>
<div class="mdl-cell mdl-cell--9-col mdl-cell--12-col-tablet mdl-cell--12-col-phone no-p-l">
    <div class="ahs-card-holder ahs-card-holder--first">
        <div class="mdl-card mdl-shadow--1dp ahs-card">
          <div class="mdl-card__title">
            <h2 class="mdl-card__title-text">Create a new location</h2>
          </div>
          <div class="form-holder">
            <form asp-controller="Location" asp-action="Create" method="post" asp-antiforgery="true">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ahs-textfield--block">
                    <input class="mdl-textfield__input" asp-for="Location.Name">
                    <label class="mdl-textfield__label" asp-for="Location.Name">Name</label>
                    <span class="mdl-textfield__error" asp-for="Location.Name" ></span>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ahs-textfield--block">
                    <input class="mdl-textfield__input" asp-for="Location.Description">
                    <label class="mdl-textfield__label" asp-for="Location.Description">Description</label>
                    <span class="mdl-textfield__error" asp-for="Location.Description"></span>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label ahs-textfield--block">
                    <label class="mdl-textfield__label" asp-for="Location.Organisation">Organisation</label>
                    <select asp-for="Location.OrganisationId" asp-items="Model.Organisations"></select> 
                    <span class="mdl-textfield__error" asp-for="Location.Organisation"></span>
                </div>
                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">Save</button>
            </form>
          </div>
        </div>
    </div>
</div>